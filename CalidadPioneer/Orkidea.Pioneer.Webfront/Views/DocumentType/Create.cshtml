@model Orkidea.Pioneer.Entities.DocumentType
@{
    ViewBag.Title = "Sistema de gestión - Creación de tipos de documento";
}
<h2>Sistema de gestión - Creación de tipos de documento</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div @*class="form-horizontal"*@>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label" })

            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">            
            <input type="submit" value="Guardar" class="btn btn-info" />  | @Html.ActionLink("Volver a la lista", "Index")            
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}