@model Orkidea.Pioneer.Webfront.Models.LoginModel

@{
    ViewBag.Title = "Bienvenido";
}

<script src="/Scripts/jquery-2.1.3.js"></script>
<script src="/Scripts/bootstrap.js"></script>

<section class="block">
    <div id="myCarousel" class="carousel slide">
        <div class="carousel-inner">
            <div class="active item">
                <img src="~/Images/slider/s1.png" alt="Slide1" />
            </div>
            <div class="item">
                <img src="~/Images/slider/s2.png" alt="Slide2" />
            </div>
        </div>
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">‹</a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">›</a>

    </div>
</section>
<header class="homeHeader"><h1>Portal de Calidad - Pioneer Energy Services</h1></header>
@*<hr />*@
<div class="row">
    <div class="col-md-4">
        <h4 class="homeBoxTitle">Bienvenido</h4>
        <p class="homeBoxBody">
            Pioneer Energy Services Colombia pone a disposición de sus colaboradores esta herramienta que permitirá centralizar la información del SIG. En este portal podrá encontrar de forma fácil y rapida las ultimas noticias de la organización, acceder a la documentacion de calidad y dejar sus sugerencias de mejora continua.
        </p>
    </div>
    <div class="col-md-4">
        <h4 class="homeBoxTitle">Mantengase al dia</h4>
        <p class="homeBoxBody">En este portal encontrá siempre la ultima version de los formatos, procedimientos y otros documentos relacionados con el Sistema de Gestion. </p>
        @*<p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>*@
    </div>
    <div class="col-md-4">
        <h4 class="homeBoxTitle">Acceder al portal</h4>
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Usuario", new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Contraseña", new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Iniciar sesión" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

<script>
    $("#myCarousel").carousel();
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}