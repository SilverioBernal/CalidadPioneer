@model Orkidea.Pioneer.Webfront.Models.vmUser

@{
    ViewBag.Title = "Cambio de clave";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    
    <h2>Cambio de clave</h2>
    <div class="form-group">
        @Html.LabelFor(model => model.clave, "Nueva clave", new { @for = "clave" })
        @Html.TextBoxFor(model => model.clave, new { @class = "form-control", type = "password" })
        @Html.ValidationMessageFor(model => model.clave)
    </div>
    <br />
    <p>
        <input type="submit" value="Guardar" class="btn btn-info" /> | @Html.ActionLink("Volver al Home", "Index", "Home")
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}