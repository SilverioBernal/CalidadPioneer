@model Orkidea.Pioneer.Entities.Position

@{
    ViewBag.Title = "Sistema de gestión - Creación de cargos";
}
@using (Html.BeginForm("Create", "Position", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h2>Sistema de gestión - Creación de procesos</h2>

    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.descripcion, new { @for = "nombre" })
        @Html.TextBoxFor(model => model.descripcion, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.descripcion)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.abreNearMiss, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.abreNearMiss)
                @Html.ValidationMessageFor(model => model.abreNearMiss, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.cierraNearMiss, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.cierraNearMiss)
                @Html.ValidationMessageFor(model => model.cierraNearMiss, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.abreHallazgo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.abreHallazgo)
                @Html.ValidationMessageFor(model => model.abreHallazgo, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.cierraHallazgo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.cierraHallazgo)
                @Html.ValidationMessageFor(model => model.cierraHallazgo, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
    </div>
    <p>
        <input type='submit' id='upload-files' value=' Guardar ' class="btn btn-info" />
        | @Html.ActionLink("Volver a la lista", "List")
    </p>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}