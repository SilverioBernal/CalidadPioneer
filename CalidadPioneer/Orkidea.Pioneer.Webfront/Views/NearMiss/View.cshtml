@model Orkidea.Pioneer.Webfront.Models.vmNearMiss

@{
    ViewBag.Title = "Sistema de gestión - Cierre de Near Miss";
}

<style>
    .error {
        color: red;
        font-weight: normal;
    }
</style>

    <h2>Sistema de gestión - Cierre de Near Miss</h2>
    <div class="row">
        <div class="form-group well">
            <div class="col-md-4">
                <span>NEAR MISS No. <strong>@Model.id</strong></span>
            </div>
            <div class="col-md-4">
                <span>Abierta por <strong>@Model.usuarioCrea</strong></span>
            </div>
            <div class="col-md-4">
                <span>Creada en <strong>@Model.fechaApertura.ToString("yyyy-MM-dd")</strong></span>
            </div>
            <br />
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(model => model.tipoHallazgo, "Tipo de hallazgo", new { @for = "tipoHallazgo" })
                @Html.TextBoxFor(model => model.tipoHallazgo, new { @class = "form-control", readOnly = true, style = "max-width:100%" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.actividadReporteador, "Actividad que realiza quien reporta", new { @for = "tipoHallazgo" })
                @Html.TextBoxFor(model => model.tipoHallazgo, new { @class = "form-control", readOnly = true, style = "max-width:100%" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.idUbicacion, "Ubicacion", new { @for = "idUbicacion", @class = "control-label" })
                @Html.DropDownListFor(model => model.idUbicacion, new SelectList(Model.lsUbicaion, "id", "descripcion"), "Seleccione", new { @class = "form-control", style = "max-width:100%", disabled = "disabled" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-6">
                @Html.LabelFor(model => model.descripcion, "Descripción", new { @for = "descripcion", @class = "required" })
                @Html.TextAreaFor(model => model.descripcion, new { @class = "form-control col-md-12", readOnly = true })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.accionSugeida, "Acción sugerida", new { @for = "accionSugeida" })
                @Html.TextAreaFor(model => model.accionSugeida, new { @class = "form-control", readOnly = true })
            </div>
        </div>
    </div>
    <h3>Análisis del hallazgo</h3>
    <div class="row">
        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(model => model.calidad, "Calidad", new { @for = "calidad" })
                @Html.DropDownListFor(model => model.calidad, new SelectList(Model.lsAnalisisCalidad), "Seleccione", new { @class = "form-control", style = "max-width:100%", disabled = "disabled" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.salud, "Salud", new { @for = "salud" })
                @Html.DropDownListFor(model => model.salud, new SelectList(Model.lsAnalisisSalud), "Seleccione", new { @class = "form-control", style = "max-width:100%", disabled = "disabled" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.asuntosAmbientales, "Asuntos ambientales", new { @for = "asuntosAmbientales" })
                @Html.DropDownListFor(model => model.asuntosAmbientales, new SelectList(Model.lsAnalisisAsuntosAmbientales), "Seleccione", new { @class = "form-control", style = "max-width:100%", disabled = "disabled" })
            </div>

        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(model => model.usoEpp, "Uso de EPP", new { @for = "usoEpp" })
                @Html.DropDownListFor(model => model.usoEpp, new SelectList(Model.lsAnalisisUsoEpp), "Seleccione", new { @class = "form-control", style = "max-width:100%", disabled = "disabled" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.condicionesTrabajo, "Salud", new { @for = "condicionesTrabajo" })
                @Html.DropDownListFor(model => model.condicionesTrabajo, new SelectList(Model.lsAnalisisCondicionesTrabajo), "Seleccione", new { @class = "form-control", style = "max-width:100%", disabled = "disabled" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.analisisHallazgo, "Clasificación", new { @for = "analisisHallazgo" })
                @Html.DropDownListFor(model => model.analisisHallazgo, new SelectList(Model.lsClasificacion), "Seleccione", new { @class = "form-control", style = "max-width:100%", disabled = "disabled" })
            </div>

        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.observacionesCierre, "Observaciones", new { @for = "observacionesCierre", @class = "required" })
                @Html.TextAreaFor(model => model.observacionesCierre, new { @class = "form-control" })
            </div>
        </div>
    </div>
